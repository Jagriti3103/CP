#include <bits/stdc++.h>
using namespace std;

int main() {
    int n,x=0;
    cin>>n;
    vector<string> op(n);
    for (int i = 0; i < n; i++)
    {
        cin>>op[i];
        if(op[i] == "++X" or op[i] == "X++"){
            x++;
        }else if(op[i] == "--X" || op[i] ==  "X--"){
            x--;
        }
    }
    cout<<x<<"\n";
    return 0;
}
